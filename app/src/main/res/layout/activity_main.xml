<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:weightSum="4"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:background="#fe3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="1"
            android:gravity="center"
            android:textSize="40sp"
            android:layout_weight="1"
            />
    <LinearLayout
        android:weightSum="3"
        android:background="#00fff7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:gravity="center"
                android:textSize="40sp"
                android:background="#ff9"
                />
        <LinearLayout
            android:weightSum="3"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
              <TextView
                  android:layout_weight="2"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:text="3"
                  android:gravity="center"
                  android:textSize="40sp"
                  android:background="#ff66d1"/>

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#6687ff"
                    android:gravity="center"
                    android:text="4"
                    android:textSize="40sp" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#15286e"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="40sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>